{
  "name": "nextjs-personal-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "lint:fix": "eslint --fix './{lib,components,pages}/**/*.{ts,tsx}' --max-warnings 0",
    "format:fix": "prettier --write './{lib,components,pages}/**/*.{ts,tsx}'",
    "lint": "pnpm run lint:fix && pnpm run format:fix",
    "start": "pnpm relay && next start",
    "build": "pnpm relay && next build",
    "relay": "pnpm relay-compiler $@",
    "bundle-analyzer": "ANALYZE=true next build",
    "typecheck": "tsc --noEmit"
  },
  "relay": {
    "src": "./",
    "schema": "./schema/schema.graphql",
    "language": "typescript",
    "artifactDirectory": "queries/__generated__"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@next/bundle-analyzer": "^12.1.6",
    "antd": "^4.16.13",
    "axios": "^0.26.1",
    "classnames": "^2.3.1",
    "dayjs": "^1.10.7",
    "gray-matter": "^4.0.3",
    "next": "12.1.6",
    "next-seo": "^4.28.1",
    "nodemailer": "^6.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-html-parser": "^2.0.2",
    "react-markdown": "^7.1.0",
    "react-syntax-highlighter": "^15.4.5",
    "globals": "^15.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "17.0.24",
    "@types/react-relay": "^13.0.1",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/relay-runtime": "^13.0.2",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "autoprefixer": "^10.4.8",
    "babel-plugin-relay": "^13.2.0",
    "eslint": "9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "graphql": "^16.3.0",
    "postcss": "^8.4.16",
    "prettier": "^3.3.3",
    "relay-compiler": "^13.2.0",
    "tailwindcss": "^3.1.8",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.12.2"
  }
}
